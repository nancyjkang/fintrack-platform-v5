#!/usr/bin/env sh

echo "ğŸš€ FinTrack v5 Pre-push checks starting..."

# Basic security audit
echo "ğŸ” Running security audit..."
npm audit --audit-level=moderate
if [ $? -ne 0 ]; then
  echo "ğŸš« PUSH REJECTED: Security vulnerabilities found"
  echo "ğŸ’¡ Run 'npm audit fix' to fix security issues"
  exit 1
fi

# Ensure build passes
echo "ğŸ” Verifying build..."
npm run build
if [ $? -ne 0 ]; then
  echo "ğŸš« PUSH REJECTED: Build failed"
  echo ""
  echo "ğŸ’¡ Fix build errors before pushing to ensure deployable code"
  exit 1
fi

# Run type checking
echo "ğŸ” Running type checks..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "ğŸš« PUSH REJECTED: Type checking failed"
  echo ""
  echo "ğŸ’¡ Fix TypeScript errors before pushing"
  exit 1
fi

# Optional: Run tests if they exist
if [ -f "package.json" ] && grep -q '"test"' package.json; then
  echo "ğŸ” Running tests..."
  npm test -- --passWithNoTests
  if [ $? -ne 0 ]; then
    echo "ğŸš« PUSH REJECTED: Tests failed"
    echo ""
    echo "ğŸ’¡ Fix failing tests before pushing"
    exit 1
  fi
fi

echo "âœ… All pre-push checks passed! Safe to deploy ğŸš€"
