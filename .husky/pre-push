#!/usr/bin/env sh

echo "🚀 FinTrack v4 Pre-push checks starting..."

# Run comprehensive dependency checks (includes security audit, outdated packages, etc.)
echo "🔍 Running comprehensive dependency checks..."
node scripts/check-dependencies.js --pre-push
if [ $? -ne 0 ]; then
  echo "🚫 PUSH REJECTED: Comprehensive dependency checks failed"
  echo ""
  echo "💡 Common fixes:"
  echo "   • Run 'npm audit fix' to fix security vulnerabilities"
  echo "   • Run 'npm update' to update outdated dependencies"
  echo "   • Run 'npm install' to sync dependencies"
  echo "   • Remove unused dependencies from package.json"
  exit 1
fi

# Ensure build passes
echo "🔍 Verifying build..."
npm run build
if [ $? -ne 0 ]; then
  echo "🚫 PUSH REJECTED: Build failed"
  echo ""
  echo "💡 Fix build errors before pushing to ensure deployable code"
  exit 1
fi

# Run type checking
echo "🔍 Running type checks..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "🚫 PUSH REJECTED: Type checking failed"
  echo ""
  echo "💡 Fix TypeScript errors before pushing"
  exit 1
fi

# Optional: Run tests if they exist
if [ -f "package.json" ] && grep -q '"test"' package.json; then
  echo "🔍 Running tests..."
  npm test -- --passWithNoTests
  if [ $? -ne 0 ]; then
    echo "🚫 PUSH REJECTED: Tests failed"
    echo ""
    echo "💡 Fix failing tests before pushing"
    exit 1
  fi
fi

echo "✅ All pre-push checks passed! Safe to deploy 🚀"
