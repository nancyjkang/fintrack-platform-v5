# FinTrack v5 Environment Configuration Template
# Copy this file to .env.local for development or configure in your deployment platform

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Primary Database URL (Required)
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# Development Database URL (Optional - if different from DATABASE_URL)
DATABASE_URL_DEVELOPMENT="postgresql://username:password@host:5432/database_name"

# Environment-specific Database URLs (Optional)
# DATABASE_URL_STAGING="postgresql://username:password@host:5432/fintrack_staging"
# DATABASE_URL_PRODUCTION="postgresql://username:password@host:5432/fintrack_production"

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secrets (Generate each with: openssl rand -base64 32)
JWT_ACCESS_SECRET="your-jwt-access-secret-here"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-here"
JWT_SECRET="your-jwt-secret-here"

# NextAuth Secret (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# NextAuth URL (Set to your domain in production)
NEXTAUTH_URL="http://localhost:3000"

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Vercel Configuration (Required for CI/CD)
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# Email Service (for notifications)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Error Tracking (Optional)
# SENTRY_DSN="https://your-sentry-dsn"

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================

# Enable/disable features
# ENABLE_ANALYTICS="true"
# ENABLE_ERROR_TRACKING="true"
# ENABLE_EMAIL_NOTIFICATIONS="false"

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Node Environment
NODE_ENV="development"

# Debug Mode
# DEBUG="true"

# Log Level (error, warn, info, debug)
LOG_LEVEL="info"

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching/sessions)
# ============================================================================

# Redis URL (if using Redis for caching)
# REDIS_URL="redis://localhost:6379"

# ============================================================================
# BACKUP CONFIGURATION (Production)
# ============================================================================

# S3 Bucket for backups (Optional)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# BACKUP_BUCKET="fintrack-backups"

# ============================================================================
# MONITORING & HEALTH CHECKS
# ============================================================================

# Health check configuration
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_DATABASE="true"

# ============================================================================
# NOTES
# ============================================================================

# 1. Never commit this file with real secrets to version control
# 2. Use environment-specific files (.env.staging, .env.production)
# 3. In production, set these variables in your deployment platform
# 4. Generate strong, unique secrets for each environment
# 5. Rotate secrets regularly for security
