# FinTrack v5 Development Environment

# Database - Local Docker
DATABASE_URL="postgresql://fintrack_dev:dev_password_123@localhost:5432/fintrack_v5_dev?schema=public"

# Redis - Local Docker
REDIS_URL="redis://localhost:6379"

# JWT Secrets (development only - generate new for production)
JWT_ACCESS_SECRET="dev-jwt-access-secret-change-in-production"
JWT_REFRESH_SECRET="dev-jwt-refresh-secret-change-in-production"

# Encryption Keys (development only)
ENCRYPTION_KEY="dev-encryption-key-change-in-production-32-chars"
BACKUP_ENCRYPTION_KEY="dev-backup-key-change-in-production-32-chars"

# Application
NODE_ENV="development"
PORT="3000"
APP_URL="http://localhost:3000"

# Development Settings
ENABLE_PLAYGROUND="true"
ENABLE_INTROSPECTION="true"
LOG_LEVEL="debug"

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="1000" # Higher limit for dev
SESSION_TIMEOUT_MS="7200000"   # 2 hours for dev
